<h2>Modifier mon compte</h2>
<br>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Actuellement en attente de confimation d'email pour <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                label: 'Nouveau mot de passe',
                hint: "Laisser blanc si vous ne voulez pas effectuer de changement.",
                required: false,
                input_html: { autocomplete: "nouveau mot de passe" } %>
    <%= f.input :password_confirmation,
                label: 'Confirmation du nouveau mot de passe',
                required: false,
                input_html: { autocomplete: "confirmation mot de passe" } %>
    <%= f.input :current_password,
                label: 'Mot de passe actuel',
                hint: "Nous avons besoin de votre mot de passe actuel pour effectuer le changement.",
                required: true,
                input_html: { autocomplete: "mot de passe actuel" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Mettre à jour", class: "btn btn-secondary"%>
    <%= link_to "Annuler", root_path, class: "btn btn-primary" %>
  </div>
<% end %>
<br><br>
<div class="form-actions">
  <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes-vous sûr(e) de vouloir supprimer votre compte?" }, method: :delete %>
</div>


